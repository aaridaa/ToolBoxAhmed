<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout tools:context=".MainActivity"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:textColor="@color/colorText"
        android:text="Basic Calculator"
        android:id="@+id/titleTextView"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorMyPurple"
        android:id="@+id/num1EditText"
        android:gravity="center"
        android:hint="num1"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorMyPurple"
        android:id="@+id/num2EditText"
        android:gravity="center"
        android:hint="num2"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal">

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorText"
        android:text="Add"
        android:id="@+id/addButton"
        android:onClick="add"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorText"
        android:text="Subt"
        android:id="@+id/subtButton"
        android:onClick="subt"/>

</LinearLayout>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:textColor="@color/colorMyPurple"
        android:text="Answer"
        android:id="@+id/ansTextView"/>

</LinearLayout>